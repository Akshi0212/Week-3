import java.util.Stack;

class Solution {
    public int[] dailyTemperatures(int[] temperatures) {
        int n = temperatures.length;
        int[] result = new int[n];
        // Stack stores indices of temperatures
        Stack<Integer> stack = new Stack<>();

        for (int i = 0; i < n; i++) {
            // While current temp is warmer than the temp at the top of the stack
            while (!stack.isEmpty() && temperatures[i] > temperatures[stack.peek()]) {
                int prevIndex = stack.pop();
                // Distance between the current day and the colder previous day
                result[prevIndex] = i - prevIndex;
            }
            // Push current day's index onto the stack
            stack.push(i);
        }

        return result;
    }
}
